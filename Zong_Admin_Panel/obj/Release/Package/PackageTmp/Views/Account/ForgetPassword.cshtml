<!doctype html>
@{
    Layout = null;
}
<html lang="en" class="fullscreen-bg">
<head>
    <title>ITS Recharge Portal | Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Content/default_theme/assets//vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/default_theme/assets/vendor/font-awesome/css/font-awesome.min.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/default_theme/assets/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/Content/default_theme/assets/css/demo.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/default_theme/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/Content/default_theme/assets/img/favicon.png">
</head>
<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">

                <div class="auth-box forgot-password">
                    <div class="content">


                        @{
                            var msg = @ViewBag.message;
                        }
                        @{
                            if (msg == null)
                            {
                                <div class="header">
                                    <div class="logo text-center"><img src="~/Content/default_theme/assets/img/logo.png" alt="DiffDash"></div>
                                    <p class="lead">Recover my password</p>
                                </div>
                                <p class="text-center margin-bottom-30">Please enter your email address below to receive instructions for resetting password.</p>
                                <br />
                                <form class="form-auth-small" method="post">
                                    <div class="form-group">
                                        <label for="signup-password" class="control-label sr-only">Password</label>
                                        <input type="text" class="form-control" id="email" name="email" placeholder="Email">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-lg btn-block">Send</button>
                                    <div class="bottom">
                                        <span class="helper-text">Know your password? <a href='@Url.Action("Index", "Account")'>Login</a></span>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <div class="header">
                                    <div class="logo text-center"><img src="~/Content/default_theme/assets/img/logo.png" alt="DiffDash"></div>
                                </div>
                                <br />
                                <p class="text-center margin-bottom-30" style="color:green">@ViewBag.message</p>
                                <div class="bottom">
                                    <input type="button" class="btn btn-primary btn-lg btn-block" value="GoTo Login" onclick="location.href='@Url.Action("Index", "Account")'" />
                                </div>
                            }
                        }


                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
</html>

