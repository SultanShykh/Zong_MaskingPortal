<!doctype html>
@{
    Layout = null;
}
<html lang="en" class="fullscreen-bg">
<head>
    <title>Zong Masking | Login</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <!-- VENDOR CSS -->
    <link rel="stylesheet" href="~/Content/default_theme/assets//vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/default_theme/assets/vendor/font-awesome/css/font-awesome.min.css">
    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/Content/default_theme/assets/css/main.css">
    <!-- FOR DEMO PURPOSES ONLY. You should remove this in your project -->
    <link rel="stylesheet" href="~/Content/default_theme/assets/css/demo.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    <!-- ICONS -->
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/default_theme/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/assets/img/logo.png">
</head>

<body>
    <!-- WRAPPER -->
    <div id="wrapper">
        <div class="vertical-align-wrap">
            <div class="vertical-align-middle">

                <div class="auth-box forgot-password">
                    <div class="content">
                        @*  <script>window.history.forward();</script>*@

                        @{
                            var msg = @ViewBag.message;
                        }
                        @{
                            if (msg == null)
                            {
                                <div class="header">
                                    <script>window.history.forward();</script>
                                    <div class="logo text-center">
                                        <img src="~/assets/img/logo.png" alt="DiffDash">
                                    </div>
                                    <br />
                                    <div class="text-danger text-center">@ViewBag.Message</div>
                                    <p class="lead">Enter OTP Code</p>
                                </div>
                                <p class="text-center margin-bottom-30">An OTP Code has been send to your Email Address .</p>
                                <br />
                                <div id="display" style="margin-left:40%;font-size: 20px;">Time Left </div>
                                <div id="card"></div>
                               
                                    
                                    <br />
                                    <form class="form-auth-small" method="post">
                                        <div class="form-group">
                                            <label for="signup-password" class="control-label sr-only">OTP</label>
                                            <input type="text" class="form-control" id="otp" name="otp" placeholder="OTP CODE">
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                                        <div class="bottom">
                                            <span class="helper-text">Know your password? <a href='@Url.Action("ResendOTP", "Account")'>Resend OTP</a></span>
                                        </div>
                                    </form>
                                    }
                                    else
                                    {
                                    <div class="header">
                                        <div class="logo text-center"><img src="~/Content/default_theme/assets/img/logo.png" alt="DiffDash"></div>
                                    </div>
                                    <br />
                                <p class="text-center margin-bottom-30" style="color:green">@ViewBag.message</p>
                                <div class="bottom">
                                    <input type="button" class="btn btn-primary btn-lg btn-block" value="Go To OTP" onclick="location.href='@Url.Action("OTP", "Account")'" />
                                    @*<script>window.history.forward();</script>*@
                                </div>
                                }
                                }


                            </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END WRAPPER -->
</body>
</html>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>

    var start = document.getElementById("start");
    var dis = document.getElementById("display");
    var finishTime;
    var timerLength = 90;
    var timeoutID;
    dis.innerHTML = "Time Left: " + timerLength;

    if (localStorage.getItem('myTime')) {
        Update();
    }
    

    function Update() {
        
        finishTime = localStorage.getItem('myTime');
        var timeLeft = (finishTime - new Date());
        var time = Math.max(timeLeft / 1000, 0)
        dis.innerHTML = "Time Left: " + Math.round(time);
        timeoutID = window.setTimeout(Update, 100);
    }

    var timer = document.querySelector("#timer");
    var card = document.querySelector("#card");
    var initialSeconds = 90;
    function disableBack() { window.history.forward(); }
    setTimeout("disableBack()", 0);
    window.onunload = function () { null };
    //card.onclick = function () {
    //    var myInterval = 
    //};
</script>